<script>
    const quizData = [
        {
            question: "Which dinosaur is known as the 'different lizard'?",
            options: ["Allosaurus", "Tyrannosaurus", "Velociraptor"],
            correct: "Allosaurus"
        },
        {
            question: "Which dinosaur had a sail-like structure on its back?",
            options: ["Spinosaurus", "Stegosaurus", "Baryonyx"],
            correct: "Spinosaurus"
        },
        {
            question: "Which dinosaur had the longest neck?",
            options: ["Brachiosaurus", "Triceratops", "Ankylosaurus"],
            correct: "Brachiosaurus"
        }
    ];

    let currentQuestion = 0;
    let score = 0;

    function loadQuestion() {
        const quizContainer = document.getElementById("quiz");
        const q = quizData[currentQuestion];
        quizContainer.innerHTML = `
            <h2>${q.question}</h2>
            ${q.options.map(option => `<button onclick="checkAnswer('${option}')">${option}</button>`).join("")}
        `;
    }

    function checkAnswer(selected) {
        const correct = quizData[currentQuestion].correct;
        if (selected === correct) {
            score++;
            alert("Correct!");
        } else {
            alert("Wrong! The correct answer was: " + correct);
        }

        currentQuestion++;
        if (currentQuestion < quizData.length) {
            loadQuestion();
        } else {
            document.getElementById("quiz").innerHTML = `<h2>You got ${score} out of ${quizData.length}!</h2>`;
        }
    }

    window.onload = loadQuestion; 
</script>
